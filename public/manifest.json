{
  "name": "Jopin",
  "short_name": "Jopin",
  "description": "Set alarms for your links.",
  "author": "Oscar Lastra & Humberto Cabrera",
  "homepage_url": "https://github.com/lastra-dev/jopin",
  "manifest_version": 3,
  "version": "0.1",
  "background": {
    "service_worker": "./background.js"
  },
  "permissions": ["alarms", "notifications", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Jopin",
    "default_icon": {
      "16": "/images/logo-16.png",
      "32": "/images/logo-32.png",
      "48": "/images/logo-48.png",
      "128": "/images/logo-128.png"
    }
  },
  "icons": {
    "16": "/images/logo-16.png",
    "32": "/images/logo-32.png",
    "48": "/images/logo-48.png",
    "128": "/images/logo-128.png"
  }
}
